---
import NavBar from "../components/navbar.astro";
import Layout from "../layouts/layout.astro";
import Product from "../components/product.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>


	<Layout>
        <NavBar />
		<section class="order-section">
            <!-- left -->
            <div class= "img-carousel">
                <div class="carousel">
                    <img id="carouselImage" src="src/assets/landing-cake.png" alt="cake1" />
                </div>
                <div class="circles">
                    <button class="circle" onclick="showImage(0)" aria-label="first-image"></button>
                    <button class="circle" onclick="showImage(1)" aria-label="second-image"></button>
                    <button class="circle" onclick="showImage(2)" aria-label="third-image"></button>
                    <button class="circle" onclick="showImage(3)" aria-label="fourth-image"></button>
                </div>
            </div>
            <!-- right -->
            <div class="checkout-container">
                <h2>name of product</h2>
                <p>other stuff</p>
            </div>
        </section>



		<a href="/">
			<button class="back-button">Go Back</button>
		</a>
	</Layout>
</html>

<!--javascript for buttons for image carousel -->
<script>
    document.addEventListener("DOMContentLoaded", () => {
      const images = [
        "src/assets/landing-cake.png",
        "src/assets/landing-cake.png",
        "src/assets/landing-cake.png",
        "src/assets/landing-cake.png"
      ];

      const img = document.getElementById("carouselImage");
      const buttons = document.querySelectorAll(".circle");

      window.showImage = function(index) {
        img.style.opacity = 0;

        setTimeout(() => {
          img.src = images[index];
          img.style.opacity = 1;
        }, 150);

        buttons.forEach((b, i) => b.classList.toggle("active", i === index));
      };

      // show first image initially
      showImage(0);
    });
</script>



<style>
  .back-button {
      display: inline-block;
      background-color: beige;
      padding: 10px 20px;
      border: 2px solid black;
    }

    .order-section {
      display: flex;
      align-items: flex-start;
      justify-content: space-between;
      padding: 100px;
      min-height: 90vh;
      box-sizing: border-box;
      gap: 50px;
    }

    .img-carousel {
      flex: 1;
      max-width: 50%;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
    }

    #carouselImage {
      display: block;
      width: 100%;
      height: 40vh;       
      object-fit: cover;
      object-position: top;
      border-radius: 16px;
      transition: opacity 0.3s ease;
    }

    .circles {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-top: 12px;
      width: 100%;
    }

    .circle {
      width: 15px;
      height: 15px;
      border-radius: 50%;
      border: 1px solid var(--color-green-100);
      background-color: transparent;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .circle.active {
      background-color: var(--color-green-100);
    }

    .checkout-container {
      flex: 1;
      background-color: #f7f7f7;
      padding: 40px;
      border-radius: 16px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      height: 80vh;
    }
</style>
