---
const treats = [
  { name: "Ready made & custom cupcakes", price: "$42/dozen", img: "src/assets/products-cupcake.png" },
  { name: "Pastelitos", price: "$36/dozen", img: "src/assets/products-pastelitos.png" },
  { name: "Assorted cookies", price: "$36/dozen", img: "src/assets/products-cookie.png" },
  { name: "Flan", price: "$30/dozen", img: "src/assets/products-flan.png" },
];
---

<div class="tryOtherTreats-container py-12 mt-16 flex flex-col items-center justify-center text-center rounded-[32px] px-8">
  <h2 class="text-3xl font-semibold text-green-900 mb-10">
    Try our other treats
  </h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10 w-full max-w-7xl">
    {treats.map((treat) => (
      <div class="flex flex-col items-start bg-beige-50 rounded-2xl shadow-sm overflow-hidden">
        <img src={treat.img} alt={treat.name} class="w-full h-64 object-cover" />
        <div class="p-4 text-left">
          <h3 class="text-lg font-semibold text-green-900">{treat.name}</h3>
          <p class="text-black mt-1">{treat.price}</p>
        </div>
      </div>
    ))}
  </div>
</div>