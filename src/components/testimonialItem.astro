---
const {name = "User",body="This is a default review", url="src/assets/testimonial-1.jpg", order="left"} = Astro.props;
import TestimontalTextLeft from "./testimonialTextLeft.astro"
import Images from "./testimonialImages.astro"
---

<div class="flex flex-row p-3 bg-[#F0CAC9] w-[800px] h-auto justify-between">
   {order == "left" ? <TestimontalTextLeft name={name}, body={body}, url={url}/>
  <Images/> : <Images/> <TestimontalTextLeft name={name}, body={body}, url={url}/>
  } 
  
</div>