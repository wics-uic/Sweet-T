---
import { Image } from 'astro:assets';
import scrollBag from '/src/assets/scroll-bag.png';
import scrollCake from '/src/assets/scroll-cake.png';
import scrollHeart from '/src/assets/scroll-heart.png';
---

<div class="info-bar w-full">
  <div class="info-item">
    <Image src={scrollBag} alt="Pickup Icon" />
    <p>Pickup in Chicago 9amâ€“5pm daily</p>
  </div>


  <div class="info-item">
    <Image src={scrollCake} alt="Fresh Cake" />
    <p>Baked fresh for every order</p>
  </div>

  <div class="info-item">
    <Image src={scrollHeart} alt="Heart Icon" />
    <p>Made with love</p>
  </div>
</div>

<style>
  .info-bar {
    display: flex;
    justify-content: space-around;
    align-items: center;
    background-color: #fff;
    border-top: 2px solid #e6e6e6;
    border-bottom: 2px solid #e6e6e6;
    padding: 10px 0;
    flex-wrap: wrap;
  }

  .info-item {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    color: #333;
  }

  .info-item img {
    width: 30px;
    height: auto;
    opacity: 0.8;
  }

  .info-item p {
    margin: 0;
  }
</style>