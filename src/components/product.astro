---
const { url = "", item_name = "default name", price = "$0" } = Astro.props;
---

<!--changed href to use query params -->
<a href={`/orders?item_name=${encodeURIComponent(item_name)}&price=${encodeURIComponent(price)}&url=${encodeURIComponent(url)}`}
  class="product">
  <img src={url} class="product-image" />
  <div class="product-text">
    <p id="product-name">Ready made & custom {item_name}</p>
    <p id="product-price">{price}</p>
  </div>
</a>

<style>
    .product {
        max-width: 600px;
        max-height: 400px;
        /* border: 1px solid black; */
        border-radius: 10px;
        padding: 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .product-image {
        width: 600px;
        border: 1px solid black;
        border-radius: 10px;
        overflow: hidden;
        object-fit: cover;
        background-color: #E6D6C6;
    }

    .product-text {
        align-self: flex-start;
        display: flex;
        flex-direction: column;
        gap: 0;
        padding: 0;
        margin: 0;
        color: #010103;
    }

    #product-name {
        font-size: 24px;
        margin-bottom: 0;
    }
    

    #product-price {
        font-size: 16px;
        margin: 0;
    }
</style>