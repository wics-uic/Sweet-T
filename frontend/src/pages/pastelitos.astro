---
import ProductLayout from "../layouts/productLayout.astro"
import OrderSection from "../components/orderSection.astro";
import Product from "../components/product-data/products.ts";

const pastelitos = Product.at(4);
---

<ProductLayout>
  <OrderSection
    item_name={pastelitos?.name}
    price={pastelitos?.price}
    url={pastelitos?.imagePath}
  />
</ProductLayout>

<style>
		.header {
			color: #d12863;
			font-weight: bold;
			text-align: left;
			font-size: 3rem;
		}
	</style>