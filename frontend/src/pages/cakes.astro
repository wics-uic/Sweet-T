---
import ProductLayout from "../layouts/productLayout.astro";
import OrderSection from "../components/orderSection.astro";
import Product from "../components/product-data/products.ts";

const cake = Product.at(0);
---


<ProductLayout>
  <OrderSection
    item_name={cake?.name}
    price={cake?.price}
    url={cake?.imagePath}
  />
</ProductLayout>

<style>
  .header {
    color: #d12863;
    font-weight: bold;
    text-align: left;
    font-size: 3rem;
  }
</style>
