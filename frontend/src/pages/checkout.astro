---
import Layout from "../layouts/layout.astro";
import '../styles/global.css';
import basket from '/src/assets/nav-basket.svg';
import cakes from '/src/assets/landing-cake.png';

// Sample cart data
const cartItems = [
  {
    id: 1,
    name: "Custom Cake",
    qty: 1,
    notes: "",
    price: 65.00,
    image: cakes.src
  },
  {
    id: 2,
    name: "Custom Cupcake",
    qty: 1,
    notes: "",
    price: 42.00,
    image: cakes.src
  },
  {
    id: 3,
    name: "Pastelitos",
    qty: 1,
    notes: "",
    price: 36.00,
    image: cakes.src
  }
];

const calculateSubtotal = () => {
  return cartItems.reduce((total, item) => total + (item.price * item.qty), 0);
};

const calculateTax = () => {
  return 5.00;
};

const calculateTotal = () => {
  return calculateSubtotal() + calculateTax();
};

const calculateTotalItems = () => {
  return cartItems.reduce((total, item) => total + item.qty, 0);
};
---

  <Layout>
    <div class="cart-page">
      <h1 class="page-title">Cart</h1>
      
      <div class="cart-container">
        <div class="cart-section">
          
          <div class="cart-items" id="cartItems">
            {cartItems.map((item) => (
              <div class="cart-item" data-item-id={item.id}>
                <img src={item.image} alt={item.name} class="item-image" />
                <div class="item-info">
                  <h3 class="item-name">{item.name}</h3>
                  <p class="item-qty">Qty: {item.qty}</p>
                  <p class="item-notes">Notes:</p>
                  <div class="item-actions">
                    <button class="action-link delete-btn" data-item-id={item.id}>Delete</button>
                    <span class="separator">|</span>
                    <button class="action-link edit-btn" data-item-id={item.id}>Edit</button>
                  </div>
                </div>
                <div class="item-price-section">
                  <p class="price-label">Total:</p>
                  <p class="item-price" data-item-id={item.id}>${item.price.toFixed(2)}</p>
                </div>
              </div>
            ))}
          </div>

          <div class="cart-footer">
            <p class="items-count"><span id="itemCount">{calculateTotalItems()}</span> items</p>
            <p class="items-total" id="itemsTotal">${calculateSubtotal().toFixed(2)}</p>
          </div>
        </div>

        <div class="summary-section">
          <div class="section-header">
            <h2>Summary</h2>
          </div>
          
          <div class="summary-content">
            <div class="summary-row">
              <span>Subtotal:</span>
              <span id="subtotalAmount">${calculateSubtotal().toFixed(2)}</span>
            </div>
            
            <div class="summary-row">
              <span>Estimated Tax:</span>
              <span id="taxAmount">${calculateTax().toFixed(2)}</span>
            </div>
            
            <div class="summary-divider"></div>
            
            <div class="summary-row total-row">
              <span class="total-label">Total</span>
              <span class="total-amount" id="totalAmount">${calculateTotal().toFixed(2)}</span>
            </div>
            
            <button class="checkout-button" id="checkoutBtn">Checkout</button>
          </div>
        </div>
      </div>
    </div>
  </Layout>

<style>
  .cart-page {
    /* background-color: #f5e6d3; */
    min-height: 100vh;
    padding: 40px 60px;
  }

  .page-title {
    color: #c85b6f;
    font-size: 3rem;
    font-weight: 700;
    margin: 0 0 30px 0;
  }

  .cart-container {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 40px;
    max-width: 1400px;
  }

  /* Left Section - Cart Items */
  .cart-section {
    /* background-color: #e8dcc4; */
    border-radius: 8px;
    /* padding: 30px; */
  }

  .section-header {
    margin-bottom: 25px;
  }

  .section-header h2 {
    color: #5a4a3a;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
  }

  .cart-items {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-bottom: 30px;
  }

  .cart-item {
    background-color: #fff;
    border-radius: 8px;
    padding: 20px;
    display: grid;
    grid-template-columns: 80px 1fr auto;
    gap: 20px;
    align-items: start;
  }

  .item-image {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 8px;
  }

  .item-info {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .item-name {
    color: #333;
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0;
  }

  .item-qty,
  .item-notes {
    color: #666;
    font-size: 0.95rem;
    margin: 0;
  }

  .item-actions {
    display: flex;
    gap: 8px;
    align-items: center;
    margin-top: 8px;
  }

  .action-link {
    background: none;
    border: none;
    color: #5a8c6f;
    font-size: 0.9rem;
    text-decoration: underline;
    cursor: pointer;
    padding: 0;
  }

  .action-link:hover {
    color: #4a7c5f;
  }

  .separator {
    color: #999;
  }

  .item-price-section {
    text-align: right;
  }

  .price-label {
    color: #666;
    font-size: 0.9rem;
    margin: 0 0 5px 0;
  }

  .item-price {
    color: #333;
    font-size: 1.2rem;
    font-weight: 600;
    margin: 0;
  }

  .cart-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 20px;
    border-top: 2px solid #d4c4a8;
  }

  .items-count,
  .items-total {
    color: #333;
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0;
  }

  /* Right Section - Summary */
  .summary-section {
    /* background-color: #e8dcc4; */
    border-radius: 8px;
    /* padding: 30px; */
    height: fit-content;
    position: sticky;
    top: 20px;
  }

  .summary-content {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .summary-row {
    display: flex;
    justify-content: space-between;
    color: #333;
    font-size: 1rem;
  }

  .summary-divider {
    height: 1px;
    background-color: #d4c4a8;
    margin: 10px 0;
  }

  .total-row {
    margin-top: 10px;
  }

  .total-label {
    font-size: 1.3rem;
    font-weight: 700;
  }

  .total-amount {
    font-size: 1.3rem;
    font-weight: 700;
  }

  .checkout-button {
    width: 100%;
    background-color: #c85b6f;
    color: white;
    border: none;
    border-radius: 8px;
    padding: 15px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    margin-top: 20px;
  }

  .checkout-button:hover {
    background-color: #b14a5d;
  }

  .checkout-button:disabled {
    background-color: #ccc;
    cursor: not-allowed;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .cart-container {
      grid-template-columns: 1fr;
    }

    .summary-section {
      position: static;
    }
  }

  @media (max-width: 768px) {
    .cart-page {
      padding: 20px;
    }

    .cart-item {
      grid-template-columns: 60px 1fr;
      gap: 15px;
    }

    .item-price-section {
      grid-column: 2;
      text-align: left;
      margin-top: 10px;
    }
  }
</style>

<script>
  // Cart state management
  let cart = [
    {
      id: 1,
      name: "Custom Cake",
      qty: 1,
      notes: "",
      price: 65.00,
      image: "/api/placeholder/80/80"
    },
    {
      id: 2,
      name: "Custom Cupcake",
      qty: 1,
      notes: "",
      price: 42.00,
      image: "/api/placeholder/80/80"
    },
    {
      id: 3,
      name: "Pastelitos",
      qty: 1,
      notes: "",
      price: 36.00,
      image: "/api/placeholder/80/80"
    }
  ];

  const TAX_RATE = 5.00;

  // Update cart display
  function updateCart() {
    const subtotal = cart.reduce((total, item) => total + (item.price * item.qty), 0);
    const tax = TAX_RATE;
    const total = subtotal + tax;
    const itemCount = cart.reduce((count, item) => count + item.qty, 0);

    document.getElementById('subtotalAmount').textContent = `$${subtotal.toFixed(2)}`;
    document.getElementById('taxAmount').textContent = `$${tax.toFixed(2)}`;
    document.getElementById('totalAmount').textContent = `$${total.toFixed(2)}`;
    document.getElementById('itemCount').textContent = itemCount;
    document.getElementById('itemsTotal').textContent = `$${subtotal.toFixed(2)}`;
  }

  // Delete item
  document.querySelectorAll('.delete-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const button = e.target.closest('.delete-btn');
      const itemId = parseInt(button.dataset.itemId);
      
      cart = cart.filter(i => i.id !== itemId);
      
      const cartItem = document.querySelector(`.cart-item[data-item-id="${itemId}"]`);
      if (cartItem) {
        cartItem.remove();
      }
      
      if (cart.length === 0) {
        const cartItemsContainer = document.getElementById('cartItems');
        cartItemsContainer.innerHTML = '<p style="text-align: center; color: #666;">Your cart is empty</p>';
        document.getElementById('checkoutBtn').disabled = true;
      }
      
      updateCart();
    });
  });

  // Edit item
  document.querySelectorAll('.edit-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const button = e.target.closest('.edit-btn');
      const itemId = parseInt(button.dataset.itemId);
      console.log('Edit item:', itemId);
    });
  });

  // Checkout button
  document.getElementById('checkoutBtn').addEventListener('click', () => {
    // Checkout functionality to be implemented
    console.log('Checkout clicked', cart);
  });

  // Initialize
  updateCart();
</script>