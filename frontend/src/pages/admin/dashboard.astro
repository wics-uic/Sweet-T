---
import AdminLayout from "../../layouts/adminLayout.astro"
import CustomOrders from "../../components/customOrdersPage.astro"
import AdminNavbar from "../../components/AdminNavbar.astro"

const res = await fetch("http://localhost:8000/api/orders/getAllOrders");
const orders = await res.json();
---
<AdminLayout>
    <AdminNavbar/>
    <CustomOrders orders={orders}/>
</AdminLayout>

<style>
    html,
    body {
        margin-top: 0;
        margin-bottom: 0;
        gap: 0;
    }
</style>
