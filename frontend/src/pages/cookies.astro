---
import ProductLayout from "../layouts/productLayout.astro"
import OrderSection from "../components/orderSection.astro";

import Product from "../components/product-data/products.ts";

const cookies = Product.at(1);
---

<ProductLayout>
  <OrderSection
    item_name={cookies?.name}
    price={cookies?.price}
    url={cookies?.imagePath}
  />
</ProductLayout>

<style>
		.header {
			color: #d12863;
			font-weight: bold;
			text-align: left;
			font-size: 3rem;
		}
	</style>