---
import ProductLayout from "../layouts/productLayout.astro"
import OrderSection from "../components/orderSection.astro";
import Product from "../components/product-data/products.ts";

const cupcake = Product.at(2);
---

<ProductLayout>
  <OrderSection
    item_name={cupcake?.name}
    price={cupcake?.price}
    url={cupcake?.imagePath}
  />
</ProductLayout>

<style>
		.header {
			color: #d12863;
			font-weight: bold;
			text-align: left;
			font-size: 3rem;
		}
	</style>

