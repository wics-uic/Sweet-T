---
export const prerender = false;

import Layout from "../layouts/layout.astro";
import NavBar from "../components/navbar.astro";
import OrderSection from "../components/orderSection.astro";

// using query params to get info about products (prop didn't work - once page changes, prop info resets)
const params = new URL(Astro.request.url).searchParams;
const item_name = params.get("item_name") || "default name";
const price = params.get("price") || "$0";
const url = params.get("url") || "src/assets/landing-cake.png";
---

<Layout>
  <NavBar />

  <OrderSection 
    item_name={item_name}
    price={price}
    url={url}
  />
</Layout>
