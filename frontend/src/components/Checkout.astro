---
import cakeImage from "/src/assets/products-cake.png";
import cupcakeImage from "/src/assets/products-cupcake.png";
import pastelitosImage from "/src/assets/products-pastelitos.png";
import cookieImage from "/src/assets/products-cookie.png";
import flanImage from "/src/assets/products-flan.png";
import { Image } from "astro:assets";
---

<!--Component Structure -->
<section class="cart-section">
    <h1>My Cart</h1>

    <!-- Custom Cake Item -->
    <div class="cart-item">
        <Image src={cakeImage} alt="Custom Cake" class="item-image" />
        <div class="item-content">
            <div class="item-header">
                <span class="item-name">Custom Cake</span>
                <span class="item-price">Total: $65.00</span>
            </div>
            <div class="item-details">Qty: 1</div>
            <div class="item-details">Notes:</div>
            <div class="item-actions">
                <span class="action-link">Delete</span>
                <span class="action-link">Edit</span>
            </div>
        </div>
    </div>

    <!-- Custom Cupcake Item -->
    <div class="cart-item">
        <Image src={cupcakeImage} alt="Custom Cupcakes" class="item-image" />
        <div class="item-content">
            <div class="item-header">
                <span class="item-name">Custom Cupcake</span>
                <span class="item-price">Total: $42.00</span>
            </div>
            <div class="item-details">Qty: 1</div>
            <div class="item-details">Notes:</div>
            <div class="item-actions">
                <span class="action-link">Delete</span>
                <span class="action-link">Edit</span>
            </div>
        </div>
    </div>

    <!-- Custom Pastelitos Item -->
    <div class="cart-item">
        <Image src={pastelitosImage} alt="Pastelitos" class="item-image" />
        <div class="item-content">
            <div class="item-header">
                <span class="item-name">Pastelitos</span>
                <span class="item-price">Total: $36.00</span>
            </div>
            <div class="item-details">Qty: 1</div>
            <div class="item-details">Notes:</div>
            <div class="item-actions">
                <span class="action-link">Delete</span>
                <span class="action-link">Edit</span>
            </div>
        </div>
    </div>

    <h2>Summary</h2>

    <div class="summary-section">
        <div class="summary-row">
            <span>Subtotal:</span>
            <span>$143.00</span>
        </div>

        <div class="summary-row">
            <span>Estimated Tax:</span>
            <span>$5.00</span>
        </div>

        <hr />

        <div class="summary-row total-row">
            <span>Total</span>
            <span>$148.00</span>
        </div>

        <button class="checkout-button">Checkout</button>
    </div>

    <div class="cart-footer">
        <span>3 items</span>
        <span>$143.00</span>
    </div>
</section>

<!--Styling -->
<style>
    .cart-section{
        background-color: #f0dec5;
        color: #333;
        padding:20px;
        max-width:800px;
        margin: 0 auto;
    }

    h1{
        font-size:24px;
        margin-bottom:20px;
        color: #2c5530;
    }

    h2{
        font-size: 20px;
        margin:30px 0 15px 0;
        color: #2c5530;
    }

    .cart-item{
        background-color: white;
        border:1px solid #ddd;
        border-radius:4px;
        margin-bottom:15px;
        padding:15px;
        display:flex;
        gap:15px;
    }

    .item-image{
        width:80px;
        height:80px;
        object-fit:cover;
        border-radius:4px;
    }

    .item-content{
        flex:1;
    }

    .item-header{
        display:flex;
        justify-content: space-between;
        margin-bottom:8px;
    }

    .item-name{
        font-weight: bold;
    }

    .item-price{
        font-weight:bold;
    }

    .item-details{
        margin-bottom: 10px;
        color: #666;
    }

    .item-actions{
        display:flex;
        gap:15px;
    }

    .action-link{
        color:#2c5530;
        text-decoration: underline;
        cursor: pointer;
    }

    .summary-section{
        background-color: white;
        border:1px solid #ddd;
        border-radius: 4px;
        padding:15px;
        margin-bottom:20px;
    }

    .summary-row{
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    hr{
        border:none;
        border-top: 1px solid #ddd;
        margin:15px 0;
    }

    .total-row{
        font-weight: bold;
        font-size:18px;
    }
    
    .checkout-button{
        background-color: #2c5530;
        color:white
        border: none;
        border-radius: 4px;
        padding: 12px;
        width:100%;
        font-size:16px;
        cursor: pointer;
        margin-top: 10px;
    }

    .cart-footer{
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
        padding-top: 15px;
        border-top: 1px solid #ddd;
    }