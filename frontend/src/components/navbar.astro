const navLinks = [ {name: "Cakes", path: "/cakes"}, {name: "Cupcakes", path: "/cupcakes"}, {name: "Pastelitos", path: "/pastelitos"}, {name: "Cookies", path: "/cookies"}, {name: "Flans", path: "/flans"} ];
const navLinksRightSide = [ {name: "Cart", path: "/cart", image: "src/assets/nav-basket.svg"}, {name: "Login", path: "/login", image: "src/assets/nav-user.svg"} ];
---

<div class="nav-bar flex justify-center">
  <div class="nav-bar-left absolute left-[70px]">
    <ul>
      {navLinks.map((link) => <li><a class="link" href={link.path}>{link.name}</a></li>)}  
    </ul>
  </div>

  <div class="nav-bar-center">
    <a class="logo" href="/"><img src="src/assets/Sweet_T.svg"/></a>
  </div>

  <div class="nav-bar-right absolute right-[70px]">
    <ul>
      {navLinksRightSide.map((link) => <li><a class="link" href={link.path}><img src={link.image} height="32px" width="32px"/></a></li>)}  
    </ul>
  </div>
</div>

