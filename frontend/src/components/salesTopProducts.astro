---

// pull products here when calculations are done, for now use default
const products = [
    {rank: 1, name: 'Guava Pastelitos', revenue: 1240, color: '#044A25'},
    {rank: 2, name: 'Custom Birthday Cakes', revenue: 980, color: '#D4E8DB'},
    {rank: 3, name: 'Tres Leches Cake', revenue: 765, color: '#F0CAC9'},
];

---
<div class="top-products-container flex">
    <div class="title">Top Products this Month</div>
    <div class="subtitle">By revenue</div>

    <div class="product-bar">
        <div class="product-circle" style={`background:${products[0].color}`}>1</div>
        <div class="product-name">{products[0].name}</div>
        <div class="product-revenue">${products[0].revenue}</div>
    </div>

    <div class="product-bar">
        <div class="product-circle" style={`background:${products[1].color}`}>2</div>
        <div class="product-name">{products[1].name}s</div>
        <div class="product-revenue">${products[1].revenue}</div>       
    </div>

    <div class="product-bar">
        <div class="product-circle" style={`background:${products[2].color}`}>3</div>
        <div class="product-name">{products[2].name}</div>
        <div class="product-revenue">${products[2].revenue}</div>
    </div>
</div>

<style>
    .top-products-container {
    background: #ffffff;
    border: 1px solid #e5e7eb;
    padding: 24px;
    border-radius: 14px;
    width: 90%;
    padding: 24px 32px;
    padding-top: 10px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    margin: 0 auto;
    }

    .title {
    font-size: 20px;
    font-weight: 600;
    }
    
    .subtitle {
    font-size: 14px;
    color: #6b7280;
    margin-top: -4px;
    }

    .product-bar {
    display: flex;
    align-items: center;
    gap: 16px;
    background: #f5f8f5;
    padding: 16px;
    border-radius: 12px;
    position: relative;
    }

    .product-circle {
    width: 34px;
    height: 34px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    font-size: 14px;
    }

    .product-name {
    font-size: 16px;
    font-weight: 500;
    }

    .product-revenue {
    font-weight: 600;
    color: #333;
    font-size: 15px;
    }
</style>
