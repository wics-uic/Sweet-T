---
import Product from "./product.astro";
---

<section class="products-section">
  <h1>What celebration are we creating together?</h1>

  <div class="grid">
    <div class="product top-row">
      <Product
        item_name="Ready made & custom cakes"
        price="$65"
        url="/src/assets/products-cake.png"
        ready={true}
      />
    </div>
    <div class="product top-row">
      <Product
        item_name="Ready made & custom cupcakes"
        price="$42/dozen"
        url="/src/assets/products-cupcake.png"
        ready={true}
      />
    </div>
    <div class="product bottom-row">
      <Product
        item_name="Pastelitos"
        price="$36/dozen"
        url="/src/assets/products-pastelitos.png"
        ready={false}
      />
    </div>
    <div class="product bottom-row">
      <Product
        item_name="Assorted cookies"
        price="$36/dozen"
        url="/src/assets/products-cookie.png"
        ready={false}
      />
    </div>
    <div class="product bottom-row">
      <Product
        item_name="Flan"
        price="$30/dozen"
        url="/src/assets/products-flan.png"
        ready={false}
      />
    </div>
  </div>
</section>

<style>
  :root {
    --color-beige-100: #E6D6C6;
  }

  .products-section {
    padding: 3rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .products-section h1 {
    font-size: 2.5rem;
    font-weight: 600;
    color: #0a5c2e;
    margin-bottom: 2.5rem;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 1.5rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .product {
    width: 100%;
  }

  /* Top row: 2 items spanning 3 columns each */
  .top-row {
    grid-column: span 3;
  }

  /* Bottom row: 3 items spanning 2 columns each */
  .bottom-row {
    grid-column: span 2;
  }

  /* Tablet: stack to single column */
  @media (max-width: 768px) {
    .grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .top-row,
    .bottom-row {
      grid-column: 1;
    }
  }
</style>

<style is:global>
  /* Apply beige background only to product images */
  .product img,
  .product .image-container,
  .product .product-image {
    background-color: #E6D6C6;
  }

  /* Bold the product names */
  .product h2,
  .product h3,
  .product .product-name,
  .product .item-name {
    font-weight: 700;
  }
</style>


