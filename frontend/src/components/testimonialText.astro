---
const {name = "default",body="default", url="default", order="left"} = Astro.props;
---
<div class="font-[Bricolage_Grotesque] flex flex-col justify-evenly w-[552px] ">
    {order == "left" ?
        <h2 class="flex justify-start font-bold text-[50px]">{name}</h2>
            <p class="text-left font-medium text-[26px]">{body}</p>
        <div class="flex justify-start">
            <a href="/cakes" class="font-medium text-white rounded-[8px] bg-[#D4596B] p-5 w-[200px] text-center"> Shop all treats </a>
        </div> :
        <h2 class="flex justify-end font-bold text-[50px]">{name}</h2>
            <p class="text-right font-medium text-[26px]">{body}</p>
        <div class="flex justify-end">
            <a href="/cakes" class="font-medium text-white rounded-[8px] bg-[#D4596B] p-5 w-[200px] text-center"> Shop all treats </a>
        </div>

    }
</div>
  
