      price: 15.00, 
      filepath: "/landing-cake.png", 
      flavor: "Vanilla", 
      frosting: "Vanilla" 
    },
    "Pastelito": { 
      price: 6.00, 
      filepath: "/testimonial-3.jpg", 
      flavor: "Chocolate", 
