  // });

  // This script handles CLOSING the cart.
  // The logic for OPENING the cart is in the page that uses this component.
  document.addEventListener("DOMContentLoaded", () => {
    const cartWrapper = document.getElementById("cart-wrapper");
    const closeButton = document.getElementById("close-cart-btn");
    const overlay = document.getElementById("cart-overlay");
    // add content (temporary)
    const cartContent = document.querySelector(".cart-content");

    // NO SCROLL (disables scroll for the entire window, not including the sidebar)
    const observer = new MutationObserver((mutations) => {
      mutations.forEach((mutation) => {
        if (mutation.attributeName === "class") {
          if (cartWrapper.classList.contains("open")) {
            document.body.classList.add("no-scroll");
          } else {
            document.body.classList.remove("no-scroll");
          }
        }
      });
    });
    if (cartWrapper) {
      observer.observe(cartWrapper, { attributes: true });
    }


    function closeCart() {
      cartWrapper.classList.remove("open");
    }

    // Add listeners to close the cart
    if (closeButton) {
      closeButton.addEventListener("click", closeCart);
    }
    if (overlay) {
      overlay.addEventListener("click", closeCart);
    }

    // API Implementation HERE 

    // Helper function to build product DOM 
    function createProduct(item) {
      const product = document.createElement("div");
      product.className = "product";

      product.innerHTML = `
      <img src="${item.filepath}" alt="${item.name}">
      <div class="content">
        <h3 class="product-name">${item.name}</h3>
        <p class="flavor">${item.flavor}</p>
        <p class="frosting">${item.frosting}</p>
        <p>${item.customization}</p>
        <div class="bottom-bar">
          <div class="left-group">
            <div class="quantity-bar">
              <button>-</button>
              <p>${item.quantity}</p>
              <button>+</button>
            </div>
            <button class="trash"><img src="src/assets/trash.svg" alt="Remove"></button>
          </div>
          <p class="total">$${item.total.toFixed(2)}</p>
        </div>
      </div>
      `;
      return product;
    }
    async function deleteItem(productId) {
      if (!confirm("Remove this item?")) return;

      try {
        const response = await fetch(`${API_BASE_URL}/deleteProduct/${productId}`, {
          method: "DELETE",
        });
        if (!response.ok) {
          throw new Error("Failed to delete item from cart");
        }
        // Refresh cart display
        fetchAndRenderCart();
      } catch (error) {
        console.error("Error deleting item:", error);
      }
    }
    async function fetchAndRenderCart() {
      try {
        const response = await fetch(`${API_BASE_URL}/fetch/${USER_ID}`);
        if (!response.ok) {
          throw new Error("Failed to fetch cart data");
        }
        const cartData = await response.json();

        // Merge DB Data with Visual Catalog 
        const processedProducts = cartData.products.map(item => {
          // find details in catalog, or use defaults 
          const catalogItem = PRODUCT_CATALOG[item.name] || {
            price: 0.00,
            filepath: "/testimonial-3.png",
            flavor: "Unknown",
            frosting: "Unknown"
          };

          return {
            _id: item._id, // mongoDB id 
            name: item.name,
            quantity: item.quantity,
            customization: item.customizations,
            // visual/calculated fields
            filepath: catalogItem.filepath,
            flavor: catalogItem.flavor,
            frosting: catalogItem.frosting,
            total: (catalogItem.price * item.quantity),
          };
        });
        // render 
        cartContent.replaceChildren(...processedProducts.map(createProduct));
        // // Clear existing content
        // cartContent.replaceChildren();

        // // Render each product
        // data.forEach(item => {
        //   const productElement = createProduct(item);
          
        //   // Add delete functionality
        //   const trashButton = productElement.querySelector(".trash");
        //   trashButton.addEventListener("click", () => deleteItem(item.id));

        //   cartContent.appendChild(productElement);
        // });

      } catch (error) {
        console.error("Error fetching cart data:", error);
      }
    }

    // Fetch and render the cart from API 
    fetchAndRenderCart();

  }); 
</script>

