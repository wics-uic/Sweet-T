<script define:vars={{ item_name }}>
  // Carousel Code
  document.addEventListener("DOMContentLoaded", () => {
    const images = [
      "src/assets/products-cupcake.png",
      "src/assets/products-cake.png",
      "src/assets/products-cookie.png",
      "src/assets/products-flan.png"
    ];

    const img = document.getElementById("carouselImage");
    const buttons = document.querySelectorAll(".circle");

    window.showImage = function(index) {
      img.style.opacity = 0;
      setTimeout(() => {
        img.src = images[index];
        img.style.opacity = 1;
      }, 150);
      buttons.forEach((b, i) => b.classList.toggle("active", i === index));
    };

    showImage(0);
    
    // Tab Switching
    window.switchTab = function(event, tabId){
      document.querySelectorAll(".tab").forEach(t => t.classList.remove("active"));
      document.querySelectorAll(".tab-content").forEach(tc => tc.classList.remove("active"));
      event.target.classList.add("active");
      document.getElementById(tabId).classList.add("active");
    };

    // Ready made sections frosting 
    const frostingSpan = document.getElementById("auto-frosting");
    document.querySelectorAll("input[name='ready-flavor']").forEach(radio => {
      radio.addEventListener("change", e => {
        const flavor = e.target.value;
        const frostingMap = { chocolate: "chocolate buttercream", carrot: "cream cheese", "red velvet": "cream cheese", vanilla: "vanilla buttercream" };
        frostingSpan.textContent = frostingMap[flavor];
      });
    });
    // ADDED 
    const addBtn = document.querySelector(".add-button");
    const sizeInfo = { 5: { price: "$45", serve: "Feeds around 6–8 people." }, 8: { price: "$65", serve: "Feeds around 10–12 people." }, 10: { price: "$85", serve: "Feeds around 16–18 people." } };

    function setupSizeButtons(sectionId, updatePrice = true) {
      const section = document.getElementById(sectionId);
      const priceEl = section.querySelector(".price");
      const serveEl = section.querySelector(".serving-info");
      const buttons = section.querySelectorAll(".size-button");

      buttons.forEach(btn => {
          btn.addEventListener("click", () => {
          const { price, serve } = sizeInfo[btn.dataset.size];
          if (updatePrice){
            priceEl.textContent = price;
          } 
          serveEl.textContent = serve;
          buttons.forEach(b => b.classList.remove("active"));
          btn.classList.add("active");

          // ADDED 
          addBtn?.classList.add("ready-to-add");
        });
      });
    }
  setupSizeButtons("ready", true);
  setupSizeButtons("custom", false);
  
  // ADDED  
  function getSelectedOptions() {
    // Check which tab is active (Ready or Custom)
      const isReadyTab = document.getElementById("ready").classList.contains("active");
      const containerId = isReadyTab ? "ready" : "custom";
      const container = document.getElementById(containerId);

      // 1. Get Size
      const sizeBtn = container.querySelector(".size-button.active");
      if (!sizeBtn) return null; // Validation failed (no size selected)
      const size = sizeBtn.dataset.size + " inches";

      // 2. Get Flavor
      // Note: names are 'ready-flavor' or 'custom-flavor'
      const flavorInput = container.querySelector(`input[name="${containerId}-flavor"]:checked`);
      const flavor = flavorInput ? flavorInput.value : "Standard";

      // 3. Get Frosting
      let frosting = "Standard";
      if (isReadyTab) {
        // Grab the auto-text
        frosting = document.getElementById("auto-frosting")?.textContent || "Standard";
      } else {
        const frostingInput = container.querySelector(`input[name="${containerId}-frosting"]:checked`);
        frosting = frostingInput ? frostingInput.value : "Standard";
      }

      // 4. Get Message
      const msgBox = isReadyTab ? document.getElementById("messageBoxReady") : document.getElementById("messageBoxCustom");
      const message = msgBox.value.trim();

      // 5. Get Rush
      const rushInput = container.querySelector(".switch input");
      const isRush = rushInput.checked ? "YES (+ $40)" : "No";

      // Format the string for the DB
      // We combine all details into one string since your DB has a single 'customizations' string field
      let customString = `Style: ${isReadyTab ? 'Ready-Made' : 'Custom'} | Size: ${size} | Flavor: ${flavor} | Frosting: ${frosting} | Rush: ${isRush}`;
      
      if (message) {
        customString += ` | Message: "${message}"`;
      }

      return customString;
  }
  // ADDED: The API Call 
  function getCurrentPrice() {
    // Find the active tab (ready or custom)
    const isReadyTab = document.getElementById("ready").classList.contains("active");
    const containerId = isReadyTab ? "ready" : "custom";
    const container = document.getElementById(containerId);
    
    // Grab the text (e.g. "$65" or "$75+")
    const priceText = container.querySelector(".price").textContent;
    
    // Remove "$" and "+" signs to get just the number (e.g. 65)
    const cleanPrice = parseFloat(priceText.replace(/[^0-9.]/g, ''));
    return cleanPrice;
  }

  async function addToBag(productName, quantity, customizations, price) {
    try {
      const response = await fetch("http://localhost:8000/api/cart/add", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        credentials: "include", // <--- IMPORTANT: Sends the cookie
        body: JSON.stringify({
          name: productName,
          quantity: quantity,
          customizations: customizations,
          price: price
        })
      });

      if (response.ok) {
          console.log("Added to bag!");
          // 1. Refresh the cart sidebar (triggering the listener we added in CartSidebar.astro)
          document.dispatchEvent(new Event('cartUpdated'));
          
          // 2. Open the sidebar visually
          const cartWrapper = document.getElementById("cart-wrapper");
          cartWrapper.classList.add("open");
      } else {
        console.error("Server error");
        alert("Failed to add to bag. Please try again.");
      }
    } catch (err) {
      console.error(err);
      alert("Network error.");
    }
  }

  // Attach Click Listener to the Main "Add to Bag" Button
  if (addBtn) {
    addBtn.addEventListener("click", () => {
      // 1. Gather Data
      const customizations = getSelectedOptions();
      const currentPrice = getCurrentPrice();

      // 2. Validation
      if (!customizations) {
        alert("Please select a size first.");
        return;
      }

      // 3. Send to API
      // item_name comes from the define:vars at the top
      addToBag(item_name, 1, customizations, currentPrice);
    });
  }


  const openCartButton = document.querySelector(".add-button");
    const cartWrapper = document.getElementById("cart-wrapper");

    if (openCartButton && cartWrapper) {
      openCartButton.addEventListener("click", () => {
        cartWrapper.classList.add("open");
      });
    }
  });

</script>

